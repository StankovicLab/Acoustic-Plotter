	keywords = {Cochlear Nucleus, Ih, input resistance, Ion Channels, Subthreshold currents},
	pages = {249},
	file = {PDF:C\:\\Users\\stevemci\\Zotero\\storage\\WW9VM93I\\Ceballos et al. - 2016 - Ih Equalizes Membrane Input Resistance in a Heterogeneous Population of Fusiform Neurons in the Dorsal Cochlear.pdf:application/pdf},
