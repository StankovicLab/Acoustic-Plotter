@article{brozoski_gamma-aminobutyric_2012,
	title = {Gamma-aminobutyric acid and glutamic acid levels in the auditory pathway of rats with chronic tinnitus: a direct determination using high resolution point-resolved proton magnetic resonance spectroscopy ({1H}-{MRS})},
