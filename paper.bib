	author = {Gaucher, Quentin and Yger, Pierre and Edeline, Jean-Marc},
	year = {2020},
	pmid = {32538485},
	keywords = {cortical excitability, discrimination between communication sounds, spike-timing reliability},
	pages = {3765--3785},
