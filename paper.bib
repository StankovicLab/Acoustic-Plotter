	author = {Matthies, Cordula and Brill, Stefan and Varallyay, Csanad and Solymosi, Laszlo and Gelbrich, Goetz and Roosen, Klaus and Ernestus, Ralf-Ingo and Helms, Jan and Hagen, Rudolf and Mlynski, Robert and Shehata-Dieler, Wafaa and Müller, Joachim},
