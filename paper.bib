	author = {Barber, Samuel R. and Kozin, Elliott D. and Remenschneider, Aaron K. and Puram, Sidharth V. and Smith, Max and Herrmann, Barbara S. and Cunnane, Mary E. and Brown, M. Christian and Lee, Daniel J.},
	year = {2017},
	pmid = {28700445},
	note = {ISBN: 0000000000000},
	keywords = {38, abi, cochlear implant, ct, e343, e351, ear, hearing 2017, hearing loss, multiplanar recon-, neurofibromatosis type 2, struction},
	pages = {343--351},
	file = {PDF:C\:\\Users\\stevemci\\Zotero\\storage\\HR95HG2M\\00003446-201711000-00018.pdf:application/pdf},
